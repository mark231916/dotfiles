filetype plugin indent on
syntax on


set showbreak=+++
set textwidth=100
set showmatch	
set wrap
set foldmethod=indent
set nofoldenable

set hlsearch
set smartcase
set incsearch

set autoindent	
set shiftwidth=4
set smartindent	
set wildmenu
set ignorecase
set nocompatible
set smarttab	
set softtabstop=4	

set ruler	
set tabstop=4

set undolevels=1000	
map <C-n> :NERDTreeToggle<cr>
set backspace=indent,eol,start
